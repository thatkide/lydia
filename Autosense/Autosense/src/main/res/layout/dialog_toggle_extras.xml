<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<RelativeLayout android:id="@+id/high_row"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dip"
		android:layout_marginLeft="10dip"
		android:layout_marginStart="10dip"
		android:layout_marginEnd="20dip"
		android:layout_marginRight="20dip">

		<TextView android:id="@+id/high_title"
			style="@style/SmallText"
			android:text="@string/high_color" />
		<yuku.ambilwarna.widget.AmbilWarnaPrefWidgetView
			android:id="@+id/high_color_view"
			android:layout_width="24dip"
			android:layout_height="24dip"
			android:layout_alignBottom="@+id/high_title"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

	<RelativeLayout android:id="@+id/low_row"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dip"
		android:layout_marginLeft="10dip"
		android:layout_marginStart="10dip"
		android:layout_marginEnd="20dip"
		android:layout_marginRight="20dip">

		<TextView android:id="@+id/low_title"
			style="@style/SmallText"
			android:text="@string/low_color" />
		<yuku.ambilwarna.widget.AmbilWarnaPrefWidgetView
			android:id="@+id/low_color_view"
			android:layout_width="24dip"
			android:layout_height="24dip"
			android:layout_alignBottom="@+id/low_title"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

</LinearLayout>