<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_vertical">
	<!-- left side menu controls -->
	<Button android:id="@+id/driver_0"
        style="@style/ControlRoundTopRight" />
	<Button android:id="@+id/driver_1"
        style="@style/ControlButtons" />
	<Button android:id="@+id/driver_2"
        style="@style/ControlButtons" />
	<ImageButton android:id="@+id/driver_up"
		android:src="@drawable/navigation_collapse"
        style="@style/ControlRoundBottomRight" />
    <ImageButton android:id="@+id/driver_down"
        android:src="@drawable/navigation_expand"
        style="@style/ControlRoundBottomRight"
		android:visibility="gone"/>

	<LinearLayout android:id="@+id/driver_nav_group"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:visibility="gone">
		<ImageButton android:id="@+id/driver_down_2"
			style="@style/ControlButtonsSquare"
			android:src="@drawable/navigation_expand"/>
		<ImageButton android:id="@+id/driver_up_2"
			style="@style/ControlRoundBottomRight"
            android:layout_width="79.5dip"
			android:src="@drawable/navigation_collapse"/>
	</LinearLayout>
</LinearLayout>
