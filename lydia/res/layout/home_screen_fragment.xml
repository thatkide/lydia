<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<View android:layout_height="25dp" android:layout_width="match_parent"/>
	<!--push the container down a bit, the radio buttons push it up-->
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
		<Button android:id="@+id/home_screen_previous"
				style="@style/DashboardPrevious" />

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:orientation="vertical">
			<LinearLayout android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:orientation="horizontal">
				<Button	android:id="@+id/home_0"
						   style="@style/DashboardRoundTopLeft"/>
				<Button android:id="@+id/home_1"
						style="@style/DashboardControls"/>
				<Button android:id="@+id/home_2"
						style="@style/DashboardRoundTopRight"/>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:orientation="horizontal">
				<Button android:id="@+id/home_3"
						style="@style/DashboardRoundBottomLeft"/>
				<Button android:id="@+id/home_4"
						style="@style/DashboardControls"/>
				<Button android:id="@+id/home_5"
						style="@style/DashboardRoundBottomRight"/>
			</LinearLayout>
		</LinearLayout>
		<Button android:id="@+id/home_screen_next"
				style="@style/DashboardNext" />

	</LinearLayout>
	<RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/homescreen_radio_group" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="3dp">
	</RadioGroup>
</LinearLayout>
