<resources>
	<style name="Theme.Lydia" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
		<item name="android:windowBackground">@drawable/bg_selector</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="ControlTextSize">
		<item name="android:textSize">18dip</item>
	</style>

	<style name="XSmallText">
		<item name="android:textSize">15dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="SmallText">
		<item name="android:textSize">20dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="MediumText">
		<item name="android:textSize">25dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="LargeText">
		<item name="android:textSize">30dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="XLargeText">
		<item name="android:textSize">35dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="XXLargeText">
		<item name="android:textSize">40dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>
	<style name="XXXLargeText">
		<item name="android:textSize">80dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
	</style>

	<style name="HeaderbarButtons">
		<item name="android:layout_height">80dip</item>
		<item name="android:layout_width">80dip</item>
		<item name="android:layout_marginLeft">1dip</item>
		<item name="android:layout_marginRight">0dip</item>
		<item name="android:background">@drawable/button_bg</item>
	</style>
	<style name="HeaderbarRoundBottomLeft" parent="HeaderbarButtons">
		<item name="android:background">@drawable/button_bg_round_bottom_left</item>
	</style>
	<style name="HeaderbarRoundBottomRight" parent="HeaderbarButtons">
		<item name="android:background">@drawable/button_bg_round_bottom_right</item>
	</style>
	<style name="HeaderbarRoundTopLeft" parent="HeaderbarButtons">
		<item name="android:background">@drawable/button_bg_round_top_left</item>
	</style>
	<style name="HeaderbarRoundTopRight" parent="HeaderbarButtons">
		<item name="android:background">@drawable/button_bg_round_top_right</item>
	</style>

	<style name="ControlButtons" parent="ControlTextSize">
		<item name="android:layout_width">161dip</item>
		<item name="android:layout_height">80dip</item>
		<item name="android:layout_marginLeft">1dip</item>
		<item name="android:layout_marginRight">0dip</item>
		<item name="android:background">@drawable/button_bg</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<style name="ControlButtonsSquare" parent="ControlButtons">
		<item name="android:layout_width">80dip</item>
	</style>
	<style name="ControlRoundTopRight" parent="ControlButtons">
		<item name="android:background">@drawable/button_bg_round_top_right</item>
	</style>
	<style name="ControlRoundBottomRight" parent="ControlButtons">
		<item name="android:background">@drawable/button_bg_round_bottom_right</item>
	</style>
	<style name="ControlRoundTopLeft" parent="ControlButtons">
		<item name="android:background">@drawable/button_bg_round_top_left</item>
	</style>
	<style name="ControlRoundBottomLeft" parent="ControlButtons">
		<item name="android:background">@drawable/button_bg_round_bottom_left</item>
	</style>

	<style name="DashboardControls" parent="MediumText">
		<item name="android:layout_height">160dp</item>
		<item name="android:layout_width">160dp</item>
		<item name="android:gravity">bottom|center_horizontal</item>
		<item name="android:paddingTop">30dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:layout_marginLeft">1dip</item>
		<item name="android:layout_marginRight">0dip</item>
		<item name="android:layout_marginTop">1dip</item>
		<item name="android:layout_marginBottom">0dip</item>
		<item name="android:background">@drawable/button_bg</item>
	</style>

	<style name="DashboardRoundTopLeft" parent="DashboardControls">
		<item name="android:background">@drawable/button_bg_round_top_left</item>
	</style>
	<style name="DashboardRoundTopRight" parent="DashboardControls">
		<item name="android:background">@drawable/button_bg_round_top_right</item>
	</style>
	<style name="DashboardRoundBottomLeft" parent="DashboardControls">
		<item name="android:background">@drawable/button_bg_round_bottom_left</item>
	</style>
	<style name="DashboardRoundBottomRight" parent="DashboardControls">
		<item name="android:background">@drawable/button_bg_round_bottom_right</item>
	</style>

	<style name="DashboardNavigation" parent="DashboardControls">
		<item name="android:layout_width">65dip</item>
		<item name="android:layout_height">240dip</item>
		<item name="android:layout_marginTop">40dip</item>
		<item name="android:layout_marginBottom">40dip</item>
		<item name="android:padding">15dip</item>
	</style>
	<style name="DashboardPrevious" parent="DashboardNavigation">
		<item name="android:background">@drawable/button_bg_round_left</item>
		<item name="android:drawableLeft">@drawable/navigation_previous_item</item>
	</style>
	<style name="DashboardNext" parent="DashboardNavigation">
		<item name="android:background">@drawable/button_bg_round_right</item>
		<item name="android:drawableRight">@drawable/navigation_next_item</item>
	</style>

</resources>